{
    "apps" : [
      {
        "name"            : "komuto.api",
        "script"          : "yarn",
        "args"            : "start",
        "ignore_watch"    : ["node_modules", "log/error.log", "log/access.log"],
        "error_file"      : "log/error.log",
        "out_file"        : "log/access.log",
        "merge_logs"      : true,
        "log_date_format" : "YYYY-MM-DD HH:mm Z",
        "env"  : {
            "PORT": 7007
        }
      }
    ],
    "deploy" : {
      "staging" : {
        "user" : "skyshi",
        "host" : "121.101.131.149",
        "ssh_options": "StrictHostKeyChecking=no",
        "ref"  : "origin/master",
        "path" : "/home/skyshi/deploy/komuto.api",
        "repo"  : "git@gitlab.skyshi.io:komuto/api.git",
        "post-deploy" : "cp ../../config/.env.komuto.api .env && yarn install && pm2 startOrRestart ecosystem.json"
      }
    }
}
